{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "ES2020"],
        "module": "ES2020",
        "moduleResolution": "Node",
        "noEmit": true,
        "paths": {
            "@/*": ["./src/*"],
            "~/*": ["./*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": false,
        "target": "ES2020"
    },
    "exclude": ["node_modules"],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
